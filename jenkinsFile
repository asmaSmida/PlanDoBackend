pipeline {
    agent any
    tools {
        terraform 'terraform'
    }

  
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'docker build -t planDoImageBackend .'
                }
            }
        }

  

  stage("push to docker hub") {
            steps {
                script {
                    echo "======== executing ========"
             
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                    sh "docker login -u asmasmida13 -p $dockerhub"
                        
                    }
                    echo "push to hub"
                    sh "docker tag planDoImageBackend asmasmida13/dockertp:planDoImageBackend"
                    sh "docker push asmasmida13/dockertp:planDoImageBackend"
                    
                }
            }}

        stage('Terraform Init') {
            steps {
                script {
                    // Initialize Terraform
                    sh 'terraform init -input=false -backend=false -get-plugins=false -verify-plugins=false'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    // Run Terraform plan
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                script {
                    // Run Terraform apply
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Deploy Application') {
            steps {
                script {
                    // Your additional deployment steps go here
                    // This might involve additional configurations or services
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Send notifications or perform additional actions here.'
        }
        failure {
            echo 'Pipeline failed! Send notifications or perform additional actions here.'
        }
    }
}
